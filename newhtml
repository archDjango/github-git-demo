<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
const BASE_URL = "http://localhost:8080/api/policies";

$(document).ready(function() {
  console.log("âœ… Policy page JS loaded");

  // Load policies initially
  loadPolicies();

  // Function to load policies
  function loadPolicies() {
    console.log("ðŸ“¡ Loading policies...");
    $.ajax({
      url: BASE_URL,
      method: "GET",
      success: function(policies) {
        console.log("âœ… Policies loaded:", policies);
        const tbody = $("#policyTable tbody");
        tbody.empty();
        policies.forEach(p => {
          const badgeClass =
            p.policyStatus === "ACTIVE" ? "bg-success" :
            p.policyStatus === "INACTIVE" ? "bg-secondary" : "bg-danger";

          const row = `
            <tr>
              <td>${p.policyId}</td>
              <td>${p.policyNumber}</td>
              <td>${p.policyholder ? p.policyholder.username : '-'}</td>
              <td>${p.vehicle ? p.vehicle.vehicleNumber : '-'}</td>
              <td>â‚¹${p.coverageAmount}</td>
              <td><span class="badge ${badgeClass}">${p.policyStatus}</span></td>
              <td>${p.createdDate}</td>
            </tr>`;
          tbody.append(row);
        });
      },
      error: function(xhr) {
        console.error("âŒ Error loading policies:", xhr.responseText);
        alert("Error loading policies. Make sure backend is running.");
      }
    });
  }

  // Handle form submission
  $("#policyForm").on("submit", function(e) {
    e.preventDefault();
    console.log("ðŸš€ Form submitted");

    const policyholderId = $("#policyholderId").val();
    const vehicleId = $("#vehicleId").val();
    const policyData = {
      coverageAmount: $("#coverageAmount").val(),
      policyStatus: $("#policyStatus").val()
    };

    console.log("ðŸ“¦ Sending to backend:", policyData);

    $.ajax({
      url: `${BASE_URL}?policyholderId=${policyholderId}&vehicleId=${vehicleId}`,
      method: "POST",
      contentType: "application/json",
      data: JSON.stringify(policyData),
      success: function(response) {
        console.log("âœ… Policy added:", response);
        alert("âœ… Policy added successfully!");
        $("#policyModal").modal("hide");
        loadPolicies();
      },
      error: function(xhr) {
        console.error("âŒ Error adding policy:", xhr.status, xhr.responseText);
        alert("âŒ Error adding policy: " + xhr.responseText);
      }
    });
  });

  // Search filter
  $("#searchPolicy").on("keyup", function() {
    const value = $(this).val().toLowerCase();
    $("#policyTable tbody tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
    });
  });

  // Status filter
  $("#statusFilter").on("change", function() {
    const status = $(this).val().toUpperCase();
    $("#policyTable tbody tr").each(function() {
      const rowStatus = $(this).find("td:eq(5)").text().trim().toUpperCase();
      $(this).toggle(status === "" || rowStatus.includes(status));
    });
  });
});
</script>

</body>
